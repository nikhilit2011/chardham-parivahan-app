<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-info text-white">
      <h4 class="mb-0">Vehicle Details</h4>
    </div>
    <div class="card-body">
      <p><strong>Vehicle Number:</strong> <%= @vehicle.vehicle_number %></p>
      <p><strong>Check Date:</strong> <%= @vehicle.check_date %></p>
      <p><strong>Owner:</strong> <%= @vehicle.owner %></p>
      <p><strong>Checkpost:</strong> <%= @vehicle.checkpost %></p>
      <p><strong>Char Dham Registration Number:</strong> <%= @vehicle.char_dham_registration_number %></p>
      <p><strong>Green Card Status:</strong> <%= @vehicle.green_card_status %></p>
      <p><strong>Trip Card Status:</strong> <%= @vehicle.trip_card_status %></p>
      <p><strong>Number of Pilgrims:</strong> <%= @vehicle.number_of_pilgrims %></p>

      <p><strong>Dham Destinations:</strong> <%= @vehicle.formatted_dham_destinations %></p>

      <p><strong>Return Date:</strong> <%= @vehicle.return_date.presence || "Not returned yet" %></p>

      <p>
        <strong>Vehicle Origin:</strong>
        <%= @vehicle.registered_in_uttarakhand? ? "Registered in Uttarakhand" : "Outside Uttarakhand Vehicle" %>
      </p>

      <p><strong>Remarks:</strong> <%= @vehicle.remarks %></p>
    </div>
  </div>

  <div class="mt-3 d-flex flex-wrap align-items-center">
    <%= link_to "Back to List", vehicles_path, class: "btn btn-secondary me-2 mb-2" %>

    <% if current_user.admin? || current_user.creator? %>
      <%= link_to "Edit", edit_vehicle_path(@vehicle), class: "btn btn-sm btn-outline-primary me-2 mb-2" %>
    <% end %>

    <% if current_user.admin? %>
      <%= link_to "Delete", vehicle_path(@vehicle), 
          method: :delete, 
          data: { confirm: "Are you sure you want to delete this vehicle?" },
          class: "btn btn-sm btn-outline-danger me-2 mb-2" %>
    <% end %>

    <%= link_to "New Entry", new_vehicle_path, class: "btn btn-primary mb-2" %>
  </div>
</div>
